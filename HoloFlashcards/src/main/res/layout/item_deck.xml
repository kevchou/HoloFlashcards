<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/listview_topbottom_padding"
    android:paddingLeft="@dimen/listview_side_padding"
    android:paddingRight="@dimen/listview_side_padding"
    android:paddingTop="@dimen/listview_topbottom_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/deck_background"
        android:paddingRight="@dimen/padding_normal"
        android:paddingBottom="@dimen/deck_shadow_size" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_small" >

            <TextView
                android:id="@+id/deckNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-thin"
                android:singleLine="true"
                android:text="Test Deck Name"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/deckSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/deckNameTextView"
                android:text="0 Cards" />

            <TextView
                android:id="@+id/deckCreatedDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/deckSizeTextView"
                android:layout_alignParentRight="true"
                android:text="1/Jan/2013" />
        </RelativeLayout>

        <View
            android:id="@+id/accentColorView"
            android:layout_width="@dimen/padding_large"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_small"
            android:background="@color/red" />
    </LinearLayout>

</LinearLayout>